<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/wallet_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/wallet"
        android:src="@drawable/baseline_account_balance_wallet_24"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/grid_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/grid"
        android:src="@drawable/baseline_grid_view_24"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/profile_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/profile"
        android:src="@drawable/baseline_perm_identity_24"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/wallet_btn"
        app:layout_constraintEnd_toEndOf="@id/grid_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
